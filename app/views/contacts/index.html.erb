<div class="basic-grey">
  <script type="text/javascript">
    $.notify("<%= notice %>", "success");
  </script>

  <!-- <p id="notice"><%= notice %></p> -->

  <h1><%= "#{t('messages.listining')} #{@contacts.model_name.human(count: @contacts.count)}" %></h1>

  <table>
    <thead>
      <tr>
        <th><%= @contacts.model.human_attribute_name("name") %></th>
        <!-- <th><#%= @contacts.model.human_attribute_name("email") %></th> -->
        <th><%= @contacts.model.human_attribute_name("kind") %></th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @contacts.each do |contact| %>
      <tr style="background-color: <%= cycle('white', '#F0F5F5') %>">
        <td><%= contact.name %></td>
        <!-- <td><#%= contact.email %></td> -->
        <td><%= contact.kind.description %></td>
        <td><%= link_to t('buttons.edit'), edit_contact_path(contact) %></td>
        <td><%= link_to t('buttons.destroy'), contact, method: :delete, data: { confirm: t('buttons.destroy_message') } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= paginate @contacts %>

  <br>

  <%= link_to "#{t('buttons.new')} #{@contacts.model_name.human(count: 1)}", new_contact_path, class: 'btn btn-primary' %>
  <%= link_to "#{t('buttons.home')}", root_path, class: 'btn btn-success' %>
</div>
