<div class="basic-grey">
  <script type="text/javascript">
    $.notify("<%= notice %>", "success");
  </script>

  <!-- <p id="notice"><#%= notice %></p> -->

  <h1><%= "#{t('messages.listining')} #{@kinds.model_name.human(count: @kinds.count)}" %></h1>

  <table>
    <thead>
      <tr>
        <th><%= @kinds.model.human_attribute_name("description") %></th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @kinds.each do |kind| %>
      <tr style="background-color: <%= cycle('white', '#F0F5F5') %>">
        <td><%= kind.description %></td>
        <td><%= link_to t('buttons.edit'), edit_kind_path(kind) %></td>
        <td><%= link_to t('buttons.destroy'), kind, method: :delete, data: { confirm: t('buttons.destroy_message') } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= paginate @kinds %>

  <br>

  <%= link_to "#{t('buttons.new')} #{@kinds.model_name.human(count: 1)}", new_kind_path, class: 'btn btn-primary' %>
  <%= link_to "#{t('buttons.home')}", root_path, class: 'btn btn-success' %>
</div>
